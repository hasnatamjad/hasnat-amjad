{{ 'hero-sl.css' | asset_url | stylesheet_tag }}

<section class="hero-sl-{{ section.id }} color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding">
    <div class="hero-img-container hero-height-{{ section.settings.hero-sl-height }} d-flex align-items-end justify-content-start">
     <div class="hero-content-sl py-5  ">
      <div class="page-width py-4 hero-content-inner d-flex flex-column ">
<h1 class="hero-heading">{{ section.settings.hero-heading }}</h1>
<div class="hero-text">{{ section.settings.hero-text}}</div>
 {% render 'button-sl' sst: section.settings %}
</div>

     </div>
    </div>
</section>

{% style %}
.hero-sl-{{ section.id }} {
  --hero-heading-size: {{ section.settings.hero_heading_size }}px;
}

  .hero-img-container {
    background-image: url({{ section.settings.hero-bg-desktop-sl | image_url: width: 2000 }});
  }

{% endstyle %}
{% schema %}
{ "name": "Hero SL",
    "settings": [
        {
          "type": "header",
          "content": "Image Settings"
        },
        {
         "type": "select",
         "id": "hero-sl-height",
         "label": "Section Height",
         "default": "large",
         "options": [
          {
          "value": "small", "label": "Small"
          },
          {
          "value": "medium", "label":  "Medium"
          },
          {
          "value": "large", "label":  "Large"
          },
          {
          "value": "Full", "label":  "Full"
          },
         ]
         
        },
        {
            "type": "image_picker", 
            "id": "hero-bg-desktop-sl",
            "label": "Hero Background Desktop",

        },
        {
          "type": "header",
          "content": "Content Settings"
        },
        {
        "type": "text",
        "id": "hero-heading",
        "label": "Heading",
        "default": "The Gift Guide"
        },
        {
  "type": "range",
  "id": "hero_heading_size",
  "label": "Heading size",
  "min": 12,
  "max": 80,
  "step": 1,
  "unit": "px",
  "default": 32
},
        {
        "type": "richtext",
        "id": "hero-text",
        "label": "Text",
        "default": "<p>Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season.</p>"
        },
        {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#FFF544"
    },
    {
      "type": "color",
      "id": "bg_hover_color",
      "label": "Background Hover Color",
      "default": "#000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000"
    },
    {
      "type": "color",
      "id": "text_hover_color",
      "label": "Text Hover Color",
      "default": "#fff"
    },
        {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
       },
       {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
        },
      {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
      }
     ],
"presets": [
     { "name": "Hero",
         "category": "Custom" } 
        ] 
    }
{% endschema %}